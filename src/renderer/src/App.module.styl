.uki-app
  height 100vh
  width 100vw
  display flex
  flex-direction column
  overflow hidden
  .deep-bg
    position absolute
    z-index -1
    height 100vh
    width 100vw
    background var(--bottom-background)
    opacity 0.6
  .main-container
    display flex
    gap 10px
    .sidebar
      height calc(100vh - 30px)
      width 88px
      background var(--layout-sidebar-bg-color)
      border-top-right-radius: 5px
      border-bottom-right-radius: 5px

    .content
      border-top-left-radius: 5px
      border-bottom-left-radius: 5px
      background var(--layout-content-bg-color)
      flex 1